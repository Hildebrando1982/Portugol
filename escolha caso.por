programa {
  funcao inicio() {
    inteiro escolher

    escreva("Escolha a opção: ")
    leia(escolher)

    escolha (escolher) {
      caso 1:
        escreva ("domingo")
        pare
      caso 2:
        escreva ("segunda-feira")
        pare
      caso 3:
        escreva ("terça-feira")
        pare
      caso contrario:
        escreva ("outro número")
        pare
    }

  }
}
